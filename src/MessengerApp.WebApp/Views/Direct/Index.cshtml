@model IEnumerable<MessengerApp.Application.Dtos.Direct.DirectPreviewDto>?

@inject IViewLocalizer ViewLocalizer

@if (Model != null && Model.Count() != 0)
{
    @foreach (var chat in Model)
    {
        <div class="row">
            <div class="card">
                <div class="card-header">
                    @chat.Title
                </div>
                <div class="card-body">
                    @if (chat.ProfilePictureBytes != null && chat.ProfilePictureBytes.Length != 0)
                    {
                        <img class="profile-picture" src="data:image/jpeg;base64,@Convert.ToBase64String(chat.ProfilePictureBytes)" alt="Profile Picture"/>
                    }
                    else
                    {
                        <div class="empty-circle"></div>
                    }
                </div>
                <div class="card-footer d-flex">
                    <div class="d-flex justify-content-start w-100">
                        <form method="post" asp-controller="Direct" asp-action="Chat">
                            <input type="hidden" name="directId" value="@chat.Id"/>
                            <button class="btn btn-success btn-block" type="submit">
                                @ViewLocalizer["Open"]
                            </button>
                        </form>
                    </div>
                    <div class="d-flex justify-content-end">
                        <form method="post" asp-controller="Direct" asp-action="RemoveDirect">
                            <input type="hidden" name="directId" value="@chat.Id"/>
                            <button class="btn btn-danger" type="submit">
                                @ViewLocalizer["Remove"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}