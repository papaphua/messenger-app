@model MessengerApp.Application.Dtos.Group.GroupInfoDto

<div class="row-6">
    <div class="col-6">
        <div class="card">
            <div class="card-header">New group</div>
            <form method="post" enctype="multipart/form-data" asp-action="CreateGroup">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control" placeholder="Title" asp-for="Title" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input class="form-control" placeholder="Description" asp-for="Description" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChatPictureBytes"></label>
                        <input asp-for="ChatPictureBytes" class="form-control" type="file" name="file"/>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-around justify-content-end">
                    <button class="btn btn-primary" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>