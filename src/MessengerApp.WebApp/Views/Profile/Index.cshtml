@using MessengerApp.Application.Dtos.Profile
@model MessengerApp.Application.Dtos.Profile.ProfileDto

@inject IViewLocalizer ViewLocalizer

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col">
        <partial name="_ValidationSummary"/>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">@ViewLocalizer["Profile"]</div>
            <form asp-action="UpdateProfileInfo" method="post">
                <div class="card-body">
                    <partial name="_UserProfileForm" model="Model.ProfileInfoDto"/>
                </div>

                <div class="card-footer d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit">@ViewLocalizer["Update"]</button>
                </div>
            </form>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">@ViewLocalizer["Password"]</div>
            <form asp-action="ChangePassword" method="post">
                <div class="card-body">
                    <partial name="_UserPasswordForm" model="@(new PasswordDto())"/>
                </div>

                <div class="card-footer d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit">@ViewLocalizer["ChangePassword"]</button>
                </div>
            </form>
        </div>
    </div>

</div>

<div class="row mt-4 mb-2">
    <div class="col">
        <div class="card">
            <div class="card-header">@ViewLocalizer["ProfilePicture"]</div>
            <form asp-controller="Profile" asp-action="UpdateProfilePicture" method="post" enctype="multipart/form-data">
                <div class="card-body d-flex justify-content-center">
                    @if (Model.ProfilePictureBytes != null && Model.ProfilePictureBytes.Length != 0)
                    {
                        <img class="profile-picture" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePictureBytes)" alt="Profile Picture"/>
                    }
                    else
                    {
                        <div class="empty-circle"></div>
                    }
                </div>
                <div class="form-group d-flex justify-content-end card-footer">
                    <input class="form-control" type="file" name="file" value="@ViewLocalizer["Choose"]">
                    <input class="btn btn-primary" type="submit" value="@ViewLocalizer["Upload"]" autofocus>
                </div>
            </form>
        </div>
    </div>

    <div class="col">
        <div class="card">
            <div class="card-header">@ViewLocalizer["Email"]</div>
            <form method="post">
                <div class="card-body">
                    <partial name="_UserEmailForm" model="Model.ProfileEmailDto"/>
                </div>

                <div class="card-footer d-flex justify-content-around justify-content-end">
                    <button asp-action="RequestEmailConfirmation" class="btn btn-primary" type="submit">@ViewLocalizer["ConfirmEmail"]</button>
                    <button asp-action="RequestEmailChange" class="btn btn-secondary" type="submit">@ViewLocalizer["ChangeEmail"]</button>
                </div>
            </form>
        </div>
    </div>
</div>