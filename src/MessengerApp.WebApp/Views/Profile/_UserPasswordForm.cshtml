@model MessengerApp.Application.Dtos.Profile.PasswordDto

<div class="form-group">
    <label asp-for="CurrentPassword"></label>
    <input type="password" class="form-control" placeholder="@ViewData.ModelMetadata.Properties[nameof(Model.CurrentPassword)]!.DisplayName" asp-for="CurrentPassword" autofocus>
</div>
<div class="form-group">
    <label asp-for="NewPassword"></label>
    <input type="password" class="form-control" placeholder="@ViewData.ModelMetadata.Properties[nameof(Model.NewPassword)]!.DisplayName" asp-for="NewPassword" autofocus>
</div>
<div class="form-group">
    <label asp-for="ConfirmNewPassword"></label>
    <input type="password" class="form-control" placeholder="@ViewData.ModelMetadata.Properties[nameof(Model.ConfirmNewPassword)]!.DisplayName" asp-for="ConfirmNewPassword" autofocus>
</div>