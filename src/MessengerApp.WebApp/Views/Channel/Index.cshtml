@model IEnumerable<MessengerApp.Application.Dtos.Channel.ChannelPreviewDto>?

@inject IViewLocalizer ViewLocalizer

<div class="row">
    <a class="btn btn-primary" asp-action="New" asp-controller="Channel">@ViewLocalizer["NewChannel"]</a>
</div>
@if (Model != null && Model.Count() != 0)
{
    @foreach (var chat in Model)
    {
        <div class="row">
            <div class="card">
                <div class="card-header">
                    @chat.Title
                </div>
                <div class="card-body">
                    @if (chat.ChatPictureBytes != null && chat.ChatPictureBytes.Length != 0)
                    {
                        <img class="profile-picture" src="data:image/jpeg;base64,@Convert.ToBase64String(chat.ChatPictureBytes)" alt="Profile Picture"/>
                    }
                    else
                    {
                        <div class="empty-circle"></div>
                    }
                </div>
                <div class="card-footer d-flex">
                    <div class="d-flex justify-content-start w-100">
                        <form method="post" asp-controller="Channel" asp-action="Chat">
                            <input type="hidden" name="channelId" value="@chat.Id"/>
                            <button class="btn btn-success btn-block" type="submit">
                                @ViewLocalizer["Open"]
                            </button>
                        </form>
                    </div>
                    <div class="d-flex justify-content-end">
                        <form method="post" asp-controller="Channel" asp-action="LeaveChannel">
                            <input type="hidden" name="channelId" value="@chat.Id"/>
                            <button class="btn btn-danger" type="submit">
                                @ViewLocalizer["Leave"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}