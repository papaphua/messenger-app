@model MessengerApp.Application.Dtos.Channel.ChannelCommentsDto

@inject IViewLocalizer ViewLocalizer

<div class="card mt-3">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h5 class="card-title">@ViewLocalizer["Message"]</h5>
                <p class="card-text">
                    <strong>@ViewLocalizer["Sender"]:</strong> @Model.Message.Sender.UserName
                </p>
                <p class="card-text">
                    <strong>@ViewLocalizer["Content"]:</strong> @Model.Message.Content
                </p>
                <div class="card-text">
                    @if (Model.Message.Attachments != null && Model.Message.Attachments.Any())
                    {
                        <strong>@ViewLocalizer["Attachments"]:</strong>
                        <div class="attachments">
                            @foreach (var attachment in Model.Message.Attachments)
                            {
                                <img class="attachment" src="data:image/jpeg;base64,@Convert.ToBase64String(attachment.ContentBytes)" alt="Attachment"/>
                            }
                        </div>
                    }
                </div>
                <p class="card-text">
                    <strong>@ViewLocalizer["Timestamp"]:</strong> @Model.Message.Timestamp
                </p>
            </div>
            <div class="col">
                @if (Model.Message.Sender.ProfilePictureBytes != null && Model.Message.Sender.ProfilePictureBytes.Length != 0)
                {
                    <img class="profile-picture" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Message.Sender.ProfilePictureBytes)" alt="Profile Picture"/>
                }
                else
                {
                    <div class="empty-circle"></div>
                }
            </div>
        </div>
    </div>
</div>

<form id="messageForm" method="post" asp-controller="Channel" asp-action="CreateComment">
    <div class="form-group">
        <input type="hidden" name="messageId" value="@Model.Message.Id">
        <label for="content">@ViewLocalizer["Comment"]:</label>
        <textarea class="form-control" id="content" name="CreateCommentDto.Content" rows="3"></textarea>
    </div>
    <button id="sendMessageButton" type="submit" class="btn btn-primary">@ViewLocalizer["Send"]</button>
</form>

<h2>@ViewLocalizer["Comms"]</h2>
<div id="messagesContainer">
    @if (Model.Comments.Any())
    {
        @foreach (var comment in Model.Comments)
        {
            <div class="card mt-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title">@ViewLocalizer["Comment"]</h5>
                            <p class="card-text">
                                <strong>@ViewLocalizer["Sender"]:</strong> @comment.Sender.UserName
                            </p>
                            <p class="card-text">
                                <strong>@ViewLocalizer["Content"]:</strong> @comment.Content
                            </p>
                            <p class="card-text">
                                <strong>@ViewLocalizer["Timestamp"]:</strong> @comment.Timestamp
                            </p>
                        </div>
                        <div class="col">
                            @if (comment.Sender.ProfilePictureBytes != null && comment.Sender.ProfilePictureBytes.Length != 0)
                            {
                                <img class="profile-picture" src="data:image/jpeg;base64,@Convert.ToBase64String(comment.Sender.ProfilePictureBytes)" alt="Profile Picture"/>
                            }
                            else
                            {
                                <div class="empty-circle"></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>